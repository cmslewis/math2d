{
  "extends": [
    "tslint:latest",
    "tslint-clean-code",
    "tslint-microsoft-contrib",
    "tslint-config-prettier"
  ],
  "rules": {
    "ban-blank-anchor-target": true,
    "ban-default-http-api-bridge": true,
    "no-commented-out-code-nucleus": [true, "__demo__"],
    "no-private-instance-methods-without-this": [
      true,
      "__demo__",
      "__test__",
      "__tests__",
      "__benchmarks__"
    ],
    "no-secure-value-cast": true,
    "no-secure-value-jsx": true,
    "no-secure-value-equality": true,
    "no-side-effects": [
      true,
      "__demo__",
      "__test__",
      "__tests__",
      "__benchmarks__"
    ],
    "no-pticon-span": true,
    "no-react-fragment-short-syntax": true,
    "return-or-await-expectSaga": true,
    "disallow-export-star": false,
    "disallow-import-star": false,
    "disallow-jest-toBeTruthyFalsy": true,
    "no-file-constructor": [true, "__demo__", "__test__", "__tests__"],
    "binary-expression-operand-order": { "severity": "off" },
    "export-name": { "severity": "off" },
    "import-name": { "severity": "off" }, // currently blocked on janky types/modules
    "insecure-random": { "severity": "off" },
    "max-func-body-length": { "severity": "off" },
    "mocha-no-side-effect-code": { "severity": "off" },
    "no-complex-conditionals": { "severity": "off" },
    "no-function-expression": { "severity": "off" },
    "no-import-side-effect": { "severity": "off" },
    "no-increment-decrement": { "severity": "off" },
    "no-map-without-usage": { "severity": "off" },
    "no-multiline-string": { "severity": "off" },
    "no-non-null-assertion": { "severity": "off" },
    "no-redundant-jsdoc": { "severity": "off" },
    "no-suspicious-comment": { "severity": "off" },
    "no-typeof-undefined": { "severity": "off" },
    "no-unnecessary-class": { "severity": "off" },
    "no-unnecessary-local-variable": { "severity": "off" },
    "no-useless-files": { "severity": "off" },
    "prefer-template": { "severity": "off" },
    "prefer-type-cast": { "severity": "off" },
    "promise-must-complete": { "severity": "off" },
    "react-a11y-event-has-role": { "severity": "off" },
    // https://github.com/Microsoft/tslint-microsoft-contrib/issues/390
    "react-a11y-image-button-has-alt": { "severity": "off" },
    "react-a11y-img-has-alt": { "severity": "off" },
    "react-a11y-role-has-required-aria-props": { "severity": "off" },
    "react-a11y-anchors": { "severity": "off" },
    "react-no-dangerous-html": { "severity": "off" },
    "react-this-binding-issue": { "severity": "off" },
    "switch-final-break": { "severity": "off" },
    "no-function-constructor-with-string-args": { "severity": "off" },
    "chai-vague-errors": { "severity": "off" },
    "cyclomatic-complexity": { "severity": "off" },
    "possible-timing-attack": { "severity": "off" },
    "promise-function-async": { "severity": "off" },
    "no-floating-promises": { "severity": "off" },
    "no-use-before-declare": { "severity": "off" },
    "restrict-plus-operands": { "severity": "off" },
    "use-default-type-parameter": { "severity": "off" },
    "match-default-export-name": { "severity": "off" },
    "no-implicit-dependencies": [true, "dev"],
    "no-invalid-this": { "severity": "off" },
    "no-http-string": { "severity": "off" },
    "switch-default": { "severity": "off" },
    "no-unnecessary-qualifier": { "severity": "off" },
    "no-unnecessary-type-assertion": { "severity": "off" },
    "no-for-in-array": { "severity": "off" },
    "no-relative-imports": false,
    "typedef": false,
    "missing-jsdoc": false,
    "no-any": false,
    "newline-before-return": false,
    "no-backbone-get-set-outside-model": false,
    "no-constant-condition": false,
    "prefer-method-signature": false,
    "array-type": false,
    "prefer-array-literal": false,
    "no-single-line-block-comment": false,
    "no-parameter-properties": false,
    "function-name": false,
    "no-reserved-keywords": false,
    "no-unnecessary-callback-wrapper": false,
    "underscore-consistent-invocation": false,
    "no-inner-html": false,
    "no-parameter-reassignment": false,
    "no-unnecessary-field-initialization": false,
    "no-for-in": false,
    "strict-boolean-expressions": false,
    "no-unsafe-any": false,
    "completed-docs": false,
    "no-void-expression": false,
    "no-cookies": false,
    "mocha-unneeded-done": false,
    "arrow-parens": false,
    "interface-name": false,
    "max-classes-per-file": false,
    "member-ordering": false,
    "no-console": [
      true,
      "assert",
      "dir",
      "info",
      "log",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty-interface": false,
    "no-namespace": false,
    "no-object-literal-type-assertion": false,
    "no-shadowed-variable": false,
    "no-submodule-imports": true,
    "object-literal-sort-keys": false,
    "prefer-conditional-expression": false,
    "prefer-object-spread": false,
    "no-commented-out-code": { "severity": "off" },
    "trailing-comma": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore"
      ]
    },
    "disallow-cross-package-relative-path-imports": true
  }
}
